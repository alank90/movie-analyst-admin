<!doctype html>
<html lang="en">

<head>
    <% include ./partials/head>
</head>
<body>

    <% include ./partials/navbar %>

        <div class="container">
            <h2>Editing:
                <strong>Publications</strong>
            </h2>

            <div class="row clearfix">
                <% publications.forEach(function(publication, index) { %>
                    <div class="col-sm-4">
                        <div class="panel">
                            <div class="panel-heading">
                                <h3 class="panel-title">Edit:
                                    <%= publication.name %>
                                </h3>
                            </div>
                            <div class="panel-body text-center">
                                <label>Name</label>
                                <input type="text" class="form-control" value="<%= publication.name %>" />

                                <label>Avatar</label>
                                <input type="text" class="form-control" value="<%= publication.avatar %>" />

                            </div>
                        </div>
                    </div>
                <% }) %>
            </div>
            <a class="btn btn-primary btn-block">Save</a>
        </div>  <!-- .container -->

        </body>

</html>