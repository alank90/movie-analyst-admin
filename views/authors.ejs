<!doctype html>
<html lang="en">

<head>
    <% include ./partials/head %>
</head>

<body>

    <% include ./partials/navbar %>

        <div class="container">
            <h2>Editing:
                <strong>Authors</strong>
            </h2>

            <div class="row clearfix">
                <% authors.forEach(function(author, index) { %>
                    <div class="col-sm-4">
                        <div class="panel">
                            <div class="panel-heading">
                                <h3 class="panel-title">Edit:
                                    <%= author.name %>
                                </h3>
                            </div>
                            <div class="panel-body text-center">
                                <label>Name</label>
                                <input type="text" class="form-control" value="<%= author.name %>" />

                                <label>Avatar</label>
                                <input type="text" class="form-control" value="<%= author.avatar %>" />
                                
                                <label>Publication</label>
                                <input type="text" class="form-control" value="<%= author.publication %>" />
                            </div>
                        </div>
                    </div>
                    <% }) %>
            </div>
            <a class="btn btn-primary btn-block">Save</a>
        </div>

</body>

</html>